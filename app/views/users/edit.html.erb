<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :profile %>
      <%= f.text_area :profile %>

      <%= f.submit "Update my update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>