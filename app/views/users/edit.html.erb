<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :profile %>
      <%= f.text_field :profile %>

      <%= f.submit "Update my update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>