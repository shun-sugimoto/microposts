<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= link_to "follower", following_relationship_path ,class:"btn btn-lg btn-primary" %>
    <%= link_to "followed", "#" ,class:"btn btn-lg btn-primary" %>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <h3>Follower (<%= @users.count %>)</h3>
      <% @users.each do |user| %>
      <ul class="media-list">
        <li class="media">
          <a class="media-left" href="#">
            <%= gravatar_for user %>        
          </a>
          <div class="media-body">
            <h4><%= user.name %></h4>
          </div>
        </li>
      </ul>
      <% end %>
    <% end %>
  </div>
</div>
  
